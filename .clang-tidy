Checks: >
  -*,
  readability-identifier-naming

WarningsAsErrors: "*"

CheckOptions:
  # Allow flexible naming to match embedded C conventions
  - { key: readability-identifier-naming.FunctionCase, value: aNy_CasE }
  - { key: readability-identifier-naming.FunctionIgnoredRegexp, value: "^_.*" }
  - { key: readability-identifier-naming.VariableCase, value: aNy_CasE }
  - { key: readability-identifier-naming.GlobalVariableCase, value: aNy_CasE }
  - { key: readability-identifier-naming.ParameterCase, value: aNy_CasE }
  - { key: readability-identifier-naming.MemberCase, value: aNy_CasE }
  # types (struct/enum/typedef) → flexible
  - { key: readability-identifier-naming.TypeCase, value: aNy_CasE }
  - { key: readability-identifier-naming.EnumConstantCase, value: aNy_CasE }
  # macros/constants → flexible (ignore header guards)
  - { key: readability-identifier-naming.MacroDefinitionCase, value: aNy_CasE }
  - { key: readability-identifier-naming.MacroDefinitionIgnoredRegexp, value: "^__.*_H$" }
  - { key: readability-identifier-naming.ConstantCase, value: aNy_CasE }
